(function($){
$(document).ready(function(){
  $('.resources-display select').customSelect();
	
    if(document.location.search.substr(1).length == 0) {
      $(".mlg-pager select").val(12);
    }
    else {
      var queries = {};
      $.each(document.location.search.substr(1).split('&'),function(c,q){
        var i = q.split('=');
        queries[i[0].toString()] = i[1].toString();
      });
      $(".mlg-pager select").val(queries.view);
      $(".customSelectInner").text(queries.view);
    }
    $(".mlg-pager select").change(function(){
      var str = $(this).val();
      window.location.href = "?view=" + str;
    });

});
})(jQuery);